<h1>Cart</h1>
<div id="{{cartId}}" class="cart-list product-list-container">
{{#if products}}
<button onclick="clearCart(event)" class="clear-button waves-effect waves-light btn-large">Clear cart</button>
    {{#each products}}
        <div id={{product._id}} class="product-item">
            <p id="item-title">{{product.title}}</p>
             <div class="thumbnail-container">
                        <img src={{thumbnail}} alt=""> 
                    </div>
            <p>{{product.price}}</p>
            <p>amount: {{quantity}}</p>
            <button onclick="removeProduct(event)">Remove</button>
        </div>
    {{/each}}
{{else}}
    <p>The cart is empty</p>
{{/if}}
</div>

<script src="/statics/script/cart.js"></script>